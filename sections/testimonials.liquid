<style>
  .testimonials {
    background: var(--secondary-color);
    position: relative;
  }
  
  .testimonials-slider {
    max-width: 800px;
    margin: 0 auto;
    position: relative;
    padding: 40px 0;
  }
  
  .testimonial-track {
    display: flex;
    transition: transform 0.5s ease;
  }
  
  .testimonial-item {
    min-width: 100%;
    opacity: 0;
    transform: translateX(50px);
    transition: all 0.5s ease;
  }
  
  .testimonial-item.active {
    opacity: 1;
    transform: translateX(0);
  }
  
  .testimonial-card {
    background: white;
    border-radius: 30px;
    padding: 50px 40px;
    box-shadow: 0 20px 60px rgba(0,0,0,0.1);
    position: relative;
    text-align: center;
    margin: 0 20px;
  }
  
  .quote-icon {
    width: 40px;
    height: 40px;
    color: var(--accent-color);
    margin: 0 auto 30px;
    opacity: 0.3;
  }
  
  .testimonial-text {
    font-size: 1.3rem;
    line-height: 1.8;
    margin-bottom: 40px;
    color: var(--primary-color);
    font-style: italic;
  }
  
  .testimonial-author {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
  }
  
  .author-avatar {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, var(--accent-color), var(--primary-color));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 600;
    font-size: 1.2rem;
  }
  
  .author-info h4 {
    margin-bottom: 5px;
    color: var(--primary-color);
  }
  
  .rating {
    font-size: 0.9rem;
  }
  
  .testimonial-navigation {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 30px;
    margin-top: 40px;
  }
  
  .nav-btn {
    width: 50px;
    height: 50px;
    border: none;
    background: white;
    border-radius: 50%;
    box-shadow: 0 5px 20px rgba(0,0,0,0.1);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    color: var(--primary-color);
  }
  
  .nav-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(0,0,0,0.15);
  }
  
  .nav-btn svg {
    width: 20px;
    height: 20px;
  }
  
  .testimonial-dots {
    display: flex;
    gap: 12px;
  }
  
  .dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: rgba(0,0,0,0.2);
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .dot.active {
    background: var(--accent-color);
    transform: scale(1.3);
  }
  
  .trust-indicators {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
    margin-top: 80px;
    padding: 60px 0;
    border-top: 1px solid rgba(0,0,0,0.1);
  }
  
  .trust-item {
    text-align: center;
  }
  
  .trust-number {
    font-size: 3rem;
    font-weight: 700;
    color: var(--accent-color);
    margin-bottom: 10px;
    animation: countUp 2s ease;
  }
  
  @keyframes countUp {
    0% { transform: scale(0.5); opacity: 0; }
    50% { transform: scale(1.1); }
    100% { transform: scale(1); opacity: 1; }
  }
  
  .trust-label {
    font-size: 1.1rem;
    color: var(--primary-color);
    opacity: 0.8;
  }
  
  @media (max-width: 768px) {
    .testimonial-card {
      padding: 30px 25px;
      margin: 0 10px;
    }
    
    .testimonial-text {
      font-size: 1.1rem;
    }
    
    .testimonial-author {
      flex-direction: column;
      gap: 15px;
    }
    
    .trust-indicators {
      grid-template-columns: 1fr;
      gap: 30px;
    }
    
    .trust-number {
      font-size: 2.5rem;
    }
  }
</style>

<script>
let currentSlide = 0;
const totalSlides = 3;

function changeTestimonial(direction) {
  const items = document.querySelectorAll('.testimonial-item');
  const dots = document.querySelectorAll('.dot');
  
  // Remove active class from current slide
  items[currentSlide].classList.remove('active');
  dots[currentSlide].classList.remove('active');
  
  // Calculate new slide index
  currentSlide = (currentSlide + direction + totalSlides) % totalSlides;
  
  // Add active class to new slide
  items[currentSlide].classList.add('active');
  dots[currentSlide].classList.add('active');
}

function currentTestimonial(slideIndex) {
  const items = document.querySelectorAll('.testimonial-item');
  const dots = document.querySelectorAll('.dot');
  
  // Remove active class from current slide
  items[currentSlide].classList.remove('active');
  dots[currentSlide].classList.remove('active');
  
  // Set new slide
  currentSlide = slideIndex - 1;
  
  // Add active class to new slide
  items[currentSlide].classList.add('active');
  dots[currentSlide].classList.add('active');
}

// Auto-rotate testimonials
setInterval(() => {
  changeTestimonial(1);
}, 5000);
</script>

