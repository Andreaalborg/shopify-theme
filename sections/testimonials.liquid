<section class="section" id="testimonials">
  <div class="container">
    <div class="center" style="margin-bottom:24px;">
      <h2>{{ section.settings.title | default: 'Hva kundene sier' }}</h2>
      {% if section.settings.subtitle %}
        <p class="muted">{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>

    <div class="grid grid-3">
      {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
          <article class="card" {{ block.shopify_attributes }}>
            <div class="card-content">
              <div class="stack-md">
                <p style="margin:0; font-size:1.05rem;">“{{ block.settings.quote }}”</p>
                <div class="muted">— {{ block.settings.author_name }}{% if block.settings.author_role != blank %}, {{ block.settings.author_role }}{% endif %}</div>
              </div>
            </div>
          </article>
        {% endfor %}
      {% else %}
        <article class="card">
          <div class="card-content">
            <div class="stack-md">
              <p style="margin:0; font-size:1.05rem;">“Lukten er akkurat passe – diskret og behagelig. Anbefales!”</p>
              <div class="muted">— Kunde</div>
            </div>
          </div>
        </article>
        <article class="card">
          <div class="card-content">
            <div class="stack-md">
              <p style="margin:0; font-size:1.05rem;">“Enkel å montere i bilen, og refillen gjør det rimelig i lengden.”</p>
              <div class="muted">— Kunde</div>
            </div>
          </div>
        </article>
        <article class="card">
          <div class="card-content">
            <div class="stack-md">
              <p style="margin:0; font-size:1.05rem;">“Rask levering og god oppfølging. Kommer til å kjøpe igjen.”</p>
              <div class="muted">— Kunde</div>
            </div>
          </div>
        </article>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Testimonials",
  "settings": [
    { "type": "text", "id": "title", "label": "Tittel", "default": "Hva kundene sier" },
    { "type": "textarea", "id": "subtitle", "label": "Undertittel" }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        { "type": "textarea", "id": "quote", "label": "Sitat" },
        { "type": "text", "id": "author_name", "label": "Navn" },
        { "type": "text", "id": "author_role", "label": "Rolle/bedrift" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials",
      "blocks": [
        { "type": "testimonial", "settings": { "quote": "Lukten er akkurat passe – diskret og behagelig. Anbefales!", "author_name": "Kunde", "author_role": "" } },
        { "type": "testimonial", "settings": { "quote": "Enkel å montere i bilen, og refillen gjør det rimelig i lengden.", "author_name": "Kunde", "author_role": "" } },
        { "type": "testimonial", "settings": { "quote": "Rask levering og god oppfølging. Kommer til å kjøpe igjen.", "author_name": "Kunde", "author_role": "" } }
      ]
    }
  ]
}
{% endschema %}