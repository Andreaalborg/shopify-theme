<section class="section" id="testimonials">
  <div class="container">
    <div class="center" style="margin-bottom:24px;">
      <h2>{{ section.settings.title | default: 'Hva kundene sier' }}</h2>
      {% if section.settings.subtitle %}
        <p class="muted">{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>

    <div class="grid grid-3">
      {% for block in section.blocks %}
        <article class="card" {{ block.shopify_attributes }}>
          <div class="card-content">
            <div class="stack-md">
              <p style="margin:0; font-size:1.05rem;">“{{ block.settings.quote }}”</p>
              <div class="muted">
                — {{ block.settings.author_name }}{% if block.settings.author_role != blank %}, {{ block.settings.author_role }}{% endif %}
              </div>
            </div>
          </div>
        </article>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Testimonials",
  "settings": [
    { "type": "text", "id": "title", "label": "Tittel", "default": "Hva kundene sier" },
    { "type": "textarea", "id": "subtitle", "label": "Undertittel" }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        { "type": "textarea", "id": "quote", "label": "Sitat" },
        { "type": "text", "id": "author_name", "label": "Navn" },
        { "type": "text", "id": "author_role", "label": "Rolle/bedrift" }
      ]
    }
  ],
  "presets": [ { "name": "Testimonials" } ]
}
{% endschema %}