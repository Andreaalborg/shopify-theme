<footer class="site-footer">
  <div class="container">
    <div class="top">
      <div>
        <h4>{{ section.settings.title | default: shop.name }}</h4>
        <p class="muted">{{ section.settings.footer_text }}</p>
      </div>
      <div>
        <h4>Hurtiglenker</h4>
        <div class="stack-sm">
          <a href="/">Hjem</a>
          <a href="/collections/all">Produkter</a>
          <a href="/pages/om-oss">Om oss</a>
          <a href="/pages/faq">FAQ</a>
        </div>
      </div>
      <div>
        <h4>Kundeservice</h4>
        <div class="stack-sm">
          <a href="/pages/kontakt">Kontakt oss</a>
          <a href="/policies/privacy-policy">Personvern</a>
          <a href="/policies/terms-of-service">Vilkår</a>
          <a href="/policies/refund-policy">Retur</a>
        </div>
      </div>
      <div>
        <h4>Følg oss</h4>
        <div class="stack-sm">
          {% if section.settings.facebook_url != blank %}
            <a href="{{ section.settings.facebook_url }}" target="_blank">Facebook</a>
          {% endif %}
          {% if section.settings.instagram_url != blank %}
            <a href="{{ section.settings.instagram_url }}" target="_blank">Instagram</a>
          {% endif %}
          {% if section.settings.twitter_url != blank %}
            <a href="{{ section.settings.twitter_url }}" target="_blank">Twitter</a>
          {% endif %}
        </div>
      </div>
    </div>
    <div class="bottom">
      <div>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. Alle rettigheter reservert.</div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    { "type": "text", "id": "title", "label": "Tittel", "default": "Nura" },
    { "type": "text", "id": "footer_text", "label": "Tekst", "default": "Frisk luft, enklere valg. Premium bildufter og refills." },
    { "type": "url", "id": "facebook_url", "label": "Facebook URL" },
    { "type": "url", "id": "instagram_url", "label": "Instagram URL" },
    { "type": "url", "id": "twitter_url", "label": "Twitter URL" }
  ]
}
{% endschema %}