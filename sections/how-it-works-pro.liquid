<section class="section" id="how-it-works">
  <div class="container">
    <div class="center fade-in-up" style="margin-bottom:24px;">
      <h2 class="fade-in-up">{{ section.settings.title | default: 'Slik fungerer det' }}</h2>
      {% if section.settings.subtitle %}
        <p class="muted fade-in">{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>

    <div class="grid grid-3">
      {% for block in section.blocks %}
        <article class="card fade-in-up" style="transition-delay: {{ forloop.index0 | times: 60 }}ms;" {{ block.shopify_attributes }}>
          <div class="card-content">
            <div class="stack-md">
              <div class="muted fade-in" style="font-weight:700;">Steg {{ forloop.index }}</div>
              <h3 class="fade-in-left" style="margin:0; font-size:1.1rem;">{{ block.settings.heading }}</h3>
              <p class="muted fade-in-right" style="margin:0;">{{ block.settings.text }}</p>
            </div>
          </div>
        </article>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "How It Works Pro",
  "settings": [
    { "type": "text", "id": "title", "label": "Tittel", "default": "Slik fungerer det" },
    { "type": "textarea", "id": "subtitle", "label": "Undertittel", "default": "Velg type, duft og eventuelt refill – resten ordner vi." }
  ],
  "blocks": [
    {
      "type": "step",
      "name": "Steg",
      "settings": [
        { "type": "text", "id": "heading", "label": "Overskrift", "default": "Velg løsning (vent/speil)" },
        { "type": "textarea", "id": "text", "label": "Tekst", "default": "Begge er diskrete og designet for å passe i alle biler." }
      ]
    }
  ],
  "presets": [ { "name": "How It Works Pro" } ]
}
{% endschema %}


