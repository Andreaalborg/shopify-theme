<section class="section" id="how-it-works">
  <div class="container">
    <div class="center" style="margin-bottom:24px;">
      <h2>{{ section.settings.title | default: 'Slik fungerer det' }}</h2>
      {% if section.settings.subtitle %}
        <p class="muted">{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>

    <div class="grid grid-3">
      {% for block in section.blocks %}
        <article class="card" {{ block.shopify_attributes }}>
          <div class="card-content">
            <div class="stack-md">
              <div class="muted" style="font-weight:700;">Steg {{ forloop.index }}</div>
              <h3 style="margin:0; font-size:1.1rem;">{{ block.settings.heading }}</h3>
              <p class="muted" style="margin:0;">{{ block.settings.text }}</p>
            </div>
          </div>
        </article>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "How It Works Pro",
  "settings": [
    { "type": "text", "id": "title", "label": "Tittel", "default": "Slik fungerer det" },
    { "type": "textarea", "id": "subtitle", "label": "Undertittel", "default": "Velg type, duft og eventuelt refill – resten ordner vi." }
  ],
  "blocks": [
    {
      "type": "step",
      "name": "Steg",
      "settings": [
        { "type": "text", "id": "heading", "label": "Overskrift", "default": "Velg løsning (vent/speil)" },
        { "type": "textarea", "id": "text", "label": "Tekst", "default": "Begge er diskrete og designet for å passe i alle biler." }
      ]
    }
  ],
  "presets": [ { "name": "How It Works Pro" } ]
}
{% endschema %}


