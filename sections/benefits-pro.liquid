<section class="section" id="benefits">
  <div class="container">
    <div class="center" style="margin-bottom:24px;">
      <h2>{{ section.settings.title | default: 'Hvorfor velge Nura' }}</h2>
      {% if section.settings.subtitle != blank %}
        <p class="muted">{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>

    <div class="grid grid-4">
      {% for block in section.blocks %}
        <article class="card" {{ block.shopify_attributes }}>
          <div class="card-content">
            <div class="stack-md">
              {% if block.settings.icon != blank %}
                <div aria-hidden="true" style="font-size:28px;">{{ block.settings.icon }}</div>
              {% endif %}
              <div class="stack-sm">
                <h3 style="margin:0; font-size:1.05rem;">{{ block.settings.heading }}</h3>
                <p class="muted" style="margin:0;">{{ block.settings.text }}</p>
              </div>
            </div>
          </div>
        </article>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Benefits Pro",
  "settings": [
    { "type": "text", "id": "title", "label": "Tittel", "default": "Hvorfor velge Nura" },
    { "type": "textarea", "id": "subtitle", "label": "Undertittel", "default": "Kvalitet, enkelhet og profesjonelt uttrykk." }
  ],
  "blocks": [
    {
      "type": "benefit",
      "name": "Benefit",
      "settings": [
        { "type": "text", "id": "icon", "label": "Ikon/emoji", "default": "âœ¨" },
        { "type": "text", "id": "heading", "label": "Overskrift", "default": "Premium kvalitet" },
        { "type": "textarea", "id": "text", "label": "Tekst", "default": "Materialer og dufter testet for varighet og komfort." }
      ]
    }
  ],
  "presets": [ { "name": "Benefits Pro" } ]
}
{% endschema %}


