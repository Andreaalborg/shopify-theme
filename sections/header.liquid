<header class="site-header">
  <div class="container">
    <div class="inner">
      <a href="/" class="brand">
        {% if section.settings.logo != blank %}
          <img src="{{ section.settings.logo | img_url: '200x' }}" alt="{{ shop.name }}" style="height:28px; width:auto;">
        {% endif %}
        <span>{{ section.settings.brand_text | default: shop.name }}</span>
      </a>

      <nav class="main-nav" data-nav>
        <a href="/">Hjem</a>
        <a href="/collections/all">Produkter</a>
        <a href="/pages/om-oss">Om oss</a>
        <a href="/pages/faq">FAQ</a>
        <a href="/pages/kontakt">Kontakt</a>
      </nav>

      <div class="header-actions">
        <a href="#featured" class="btn btn-ghost btn-lg">Utforsk</a>
        <a href="/cart" class="btn btn-primary btn-lg" aria-label="Handlekurv">Handlekurv ({{ cart.item_count }})</a>
        <button class="hamburger" data-nav-toggle aria-label="Meny">â˜°</button>
      </div>
    </div>
  </div>
  
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    { "type": "image_picker", "id": "logo", "label": "Logo" },
    { "type": "text", "id": "brand_text", "label": "Navn", "default": "Nura" }
  ]
}
{% endschema %}