<section class="newsletter section">
  <div class="newsletter-bg">
    <div class="floating-elements">
      <div class="element element-1"></div>
      <div class="element element-2"></div>
      <div class="element element-3"></div>
      <div class="element element-4"></div>
    </div>
  </div>
  
  <div class="container">
    <div class="newsletter-content animate-on-scroll">
      <div class="newsletter-icon">
        <svg viewBox="0 0 100 100" class="envelope-icon">
          <path d="M10 20 L90 20 L90 80 L10 80 Z" fill="currentColor" opacity="0.9"/>
          <path d="M10 20 L50 50 L90 20" stroke="white" stroke-width="3" fill="none" class="envelope-line"/>
          <circle cx="75" cy="35" r="3" fill="var(--accent-color)" class="notification-dot">
            <animate attributeName="r" values="3;5;3" dur="2s" repeatCount="indefinite"/>
          </circle>
        </svg>
      </div>
      
      <h2 class="newsletter-title">
        <span class="gradient-text">Hold deg oppdatert</span>
      </h2>
      <p class="newsletter-subtitle">
        F√• eksklusive tilbud og tips om hvordan du holder hjemmet og bilen frisk
      </p>
      
      <form action="/contact#contact_form" method="post" class="newsletter-form" id="newsletter-form">
        {% if form.posted_successfully? %}
          <div class="success-state">
            <div class="success-icon">‚úì</div>
            <p>Takk! Du vil motta eksklusive tilbud og tips p√• e-post.</p>
          </div>
        {% else %}
          <div class="form-wrapper">
            <div class="input-group">
              <input 
                type="email" 
                name="contact[email]" 
                placeholder="Din e-post adresse"
                class="newsletter-input"
                required
              >
              <button type="submit" class="newsletter-submit magnetic-button">
                <span class="btn-text">Abonner</span>
                <div class="btn-icon">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="m9 18 6-6-6-6"/>
                  </svg>
                </div>
              </button>
            </div>
            
            {% if form.errors %}
              <div class="error-message">
                Vennligst skriv inn en gyldig e-post adresse
              </div>
            {% endif %}
          </div>
        {% endif %}
        
        <input type="hidden" name="contact[subject]" value="Nyhetsbrev registrering">
        <input type="hidden" name="contact[body]" value="√ònsker √• melde meg p√• nyhetsbrevet">
      </form>
      
      <div class="newsletter-benefits">
        <div class="benefit">
          <span class="benefit-icon">üéÅ</span>
          <span>Eksklusive tilbud</span>
        </div>
        <div class="benefit">
          <span class="benefit-icon">‚ú®</span>
          <span>Tips & triks</span>
        </div>
        <div class="benefit">
          <span class="benefit-icon">üìß</span>
          <span>Kun 1-2 e-poster m√•nedlig</span>
        </div>
      </div>
      
      <p class="privacy-note">
        Vi respekterer din personvern. Du kan melde deg av n√•r som helst.
      </p>
    </div>
  </div>
</section>

<style>
  .newsletter {
    background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
    position: relative;
    overflow: hidden;
    padding: 100px 0;
  }
  
  .newsletter-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    opacity: 0.05;
  }
  
  .floating-elements {
    position: relative;
    width: 100%;
    height: 100%;
  }
  
  .element {
    position: absolute;
    border-radius: 50%;
    background: var(--accent-color);
    opacity: 0.1;
    animation: floatElement 20s infinite linear;
  }
  
  .element-1 {
    width: 60px;
    height: 60px;
    top: 10%;
    left: 10%;
    animation-delay: 0s;
  }
  
  .element-2 {
    width: 40px;
    height: 40px;
    top: 60%;
    right: 15%;
    animation-delay: 5s;
  }
  
  .element-3 {
    width: 80px;
    height: 80px;
    bottom: 20%;
    left: 20%;
    animation-delay: 10s;
  }
  
  .element-4 {
    width: 30px;
    height: 30px;
    top: 30%;
    right: 30%;
    animation-delay: 15s;
  }
  
  @keyframes floatElement {
    0% { transform: translateY(0px) rotateZ(0deg); }
    50% { transform: translateY(-20px) rotateZ(180deg); }
    100% { transform: translateY(0px) rotateZ(360deg); }
  }
  
  .newsletter-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
  }
  
  .newsletter-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 30px;
    color: var(--primary-color);
    position: relative;
  }
  
  .envelope-icon {
    width: 100%;
    height: 100%;
  }
  
  .envelope-line {
    animation: drawLine 3s ease-in-out infinite;
  }
  
  @keyframes drawLine {
    0%, 100% { stroke-dasharray: 0, 100; }
    50% { stroke-dasharray: 80, 20; }
  }
  
  .newsletter-title {
    font-size: 2.5rem;
    margin-bottom: 20px;
    line-height: 1.2;
  }
  
  .newsletter-subtitle {
    font-size: 1.2rem;
    opacity: 0.8;
    margin-bottom: 40px;
    line-height: 1.6;
  }
  
  .newsletter-form {
    margin-bottom: 40px;
  }
  
  .form-wrapper {
    position: relative;
  }
  
  .input-group {
    display: flex;
    background: white;
    border-radius: 50px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    overflow: hidden;
    transition: all 0.3s ease;
    max-width: 500px;
    margin: 0 auto;
  }
  
  .input-group:focus-within {
    box-shadow: 0 20px 60px rgba(0,0,0,0.15);
    transform: translateY(-2px);
  }
  
  .newsletter-input {
    flex: 1;
    padding: 18px 25px;
    border: none;
    outline: none;
    font-size: 1rem;
    background: transparent;
  }
  
  .newsletter-input::placeholder {
    color: #999;
  }
  
  .newsletter-submit {
    padding: 18px 30px;
    background: var(--accent-color);
    border: none;
    color: white;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 10px;
    transition: all 0.3s ease;
    font-size: 1rem;
    font-weight: 500;
  }
  
  .newsletter-submit:hover {
    background: var(--primary-color);
    transform: translateX(5px);
  }
  
  .btn-icon {
    width: 20px;
    height: 20px;
    transition: transform 0.3s ease;
  }
  
  .newsletter-submit:hover .btn-icon {
    transform: translateX(3px);
  }
  
  .success-state {
    background: white;
    padding: 40px;
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    animation: successPop 0.5s ease;
  }
  
  @keyframes successPop {
    0% { transform: scale(0.8); opacity: 0; }
    100% { transform: scale(1); opacity: 1; }
  }
  
  .success-icon {
    width: 60px;
    height: 60px;
    background: #4caf50;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 2rem;
    margin: 0 auto 20px;
    animation: checkmark 0.6s ease 0.3s both;
  }
  
  @keyframes checkmark {
    0% { transform: scale(0) rotate(-45deg); }
    100% { transform: scale(1) rotate(0deg); }
  }
  
  .newsletter-benefits {
    display: flex;
    justify-content: center;
    gap: 40px;
    margin-bottom: 30px;
    flex-wrap: wrap;
  }
  
  .benefit {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 0.95rem;
    color: var(--primary-color);
  }
  
  .benefit-icon {
    font-size: 1.2rem;
  }
  
  .privacy-note {
    font-size: 0.85rem;
    opacity: 0.6;
    max-width: 400px;
    margin: 0 auto;
  }
  
  .error-message {
    color: #f44336;
    font-size: 0.9rem;
    margin-top: 15px;
    padding: 10px;
    background: rgba(244, 67, 54, 0.1);
    border-radius: 10px;
  }
  
  @media (max-width: 768px) {
    .newsletter-title {
      font-size: 2rem;
    }
    
    .input-group {
      flex-direction: column;
      border-radius: 20px;
    }
    
    .newsletter-input,
    .newsletter-submit {
      padding: 15px 20px;
    }
    
    .newsletter-submit {
      border-radius: 0 0 20px 20px;
      justify-content: center;
    }
    
    .newsletter-benefits {
      flex-direction: column;
      gap: 20px;
      align-items: center;
    }
  }
</style>

{% schema %}
{
  "name": "Newsletter",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Hold deg oppdatert"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "F√• eksklusive tilbud og tips om hvordan du holder hjemmet og bilen frisk"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Abonner"
    }
  ],
  "presets": [
    {
      "name": "Newsletter"
    }
  ]
}
{% endschema %}