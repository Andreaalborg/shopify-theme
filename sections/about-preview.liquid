<section class="section">
  <div class="container">
    <div class="grid grid-2 animate-on-scroll">
      <div class="about-content">
        <h2>{{ section.settings.title }}</h2>
        <p>{{ section.settings.text }}</p>
        <a href="{{ section.settings.button_link }}" class="btn">
          {{ section.settings.button_text }}
        </a>
      </div>
      {% if section.settings.image %}
        <div class="about-image">
          <img src="{{ section.settings.image | img_url: '800x' }}" 
               alt="{{ section.settings.title }}"
               class="parallax-element"
               data-speed="0.3">
        </div>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .about-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 20px;
  }
  
  .about-image {
    position: relative;
    overflow: hidden;
    border-radius: 20px;
  }
  
  .about-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>

{% schema %}
{
  "name": "About Preview",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "About Us"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "About Preview"
    }
  ]
}
{% endschema %}