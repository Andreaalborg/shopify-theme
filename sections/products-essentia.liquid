<style>
  .products-essentia {
    background: var(--secondary);
  }
  
  .section-header {
    max-width: 600px;
    margin: 0 auto var(--spacing-2xl);
  }
  
  .section-badge {
    display: inline-flex;
    align-items: center;
    padding: 6px 16px;
    background: var(--white);
    border: 1px solid var(--border);
    border-radius: 100px;
    margin-bottom: var(--spacing-md);
  }
  
  .badge-text {
    font-size: 0.85rem;
    font-weight: 500;
    color: var(--primary);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .section-title {
    font-size: clamp(2rem, 4vw, 2.5rem);
    font-weight: 700;
    margin-bottom: var(--spacing-md);
  }
  
  .section-description {
    font-size: 1.125rem;
    color: var(--text-muted);
    margin-bottom: 0;
  }
  
  /* Products Grid */
  .products-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    grid-template-rows: 1fr 1fr;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-2xl);
  }
  
  .product-card {
    background: var(--white);
    border-radius: var(--radius-md);
    border: 1px solid var(--border);
    overflow: hidden;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
  }
  
  .product-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 16px 48px rgba(0,0,0,0.12);
    border-color: var(--accent);
  }
  
  /* Large Card */
  .card-large {
    grid-row: 1 / 3;
    grid-column: 1 / 2;
  }
  
  .product-visual {
    height: 300px;
    background: linear-gradient(135deg, var(--secondary), var(--accent));
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
  }
  
  .product-visual::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -50%;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
    animation: rotate 20s linear infinite;
  }
  
  @keyframes rotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
  
  .product-content {
    padding: var(--spacing-lg);
    flex: 1;
    display: flex;
    flex-direction: column;
  }
  
  /* Compact Cards */
  .card-compact:nth-child(2) {
    grid-row: 1 / 2;
    grid-column: 2 / 3;
  }
  
  .card-compact:nth-child(3) {
    grid-row: 2 / 3;
    grid-column: 2 / 3;
  }
  
  .product-visual-compact {
    height: 160px;
    background: linear-gradient(135deg, var(--secondary), var(--accent));
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }
  
  .product-content-compact {
    padding: var(--spacing-md);
    flex: 1;
    display: flex;
    flex-direction: column;
  }
  
  /* Common Styles */
  .product-image-placeholder {
    width: 100px;
    height: 100px;
    background: rgba(255,255,255,0.9);
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    z-index: 2;
  }
  
  .product-icon-large {
    width: 48px;
    height: 48px;
    color: var(--primary);
  }
  
  .product-category {
    font-size: 0.8rem;
    font-weight: 500;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: var(--spacing-xs);
  }
  
  .product-name {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: var(--spacing-sm);
  }
  
  .product-description {
    color: var(--text-muted);
    margin-bottom: var(--spacing-md);
    flex: 1;
  }
  
  .product-features {
    margin-bottom: var(--spacing-md);
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }
  
  .feature-item {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    font-size: 0.9rem;
    color: var(--text-muted);
  }
  
  .feature-icon {
    font-size: 1rem;
  }
  
  .product-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
    margin-top: auto;
  }
  
  .product-price {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--primary);
  }
  
  .product-actions {
    display: flex;
    gap: var(--spacing-xs);
  }
  
  .product-actions .btn {
    padding: 10px 16px;
    font-size: 0.9rem;
  }
  
  /* Section CTA */
  .section-cta {
    max-width: 500px;
    margin: 0 auto;
    padding: var(--spacing-lg);
    background: var(--white);
    border-radius: var(--radius-md);
    border: 1px solid var(--border);
  }
  
  .section-cta h3 {
    font-size: 1.25rem;
    margin-bottom: var(--spacing-sm);
  }
  
  /* Responsive */
  @media (max-width: 1024px) {
    .products-grid {
      grid-template-columns: 1fr 1fr;
      grid-template-rows: auto auto auto;
    }
    
    .card-large {
      grid-row: 1 / 2;
      grid-column: 1 / 3;
    }
    
    .card-compact:nth-child(2) {
      grid-row: 2 / 3;
      grid-column: 1 / 2;
    }
    
    .card-compact:nth-child(3) {
      grid-row: 2 / 3;
      grid-column: 2 / 3;
    }
    
    .product-visual {
      height: 200px;
    }
  }
  
  @media (max-width: 768px) {
    .products-grid {
      grid-template-columns: 1fr;
      grid-template-rows: auto;
    }
    
    .card-large,
    .card-compact:nth-child(2),
    .card-compact:nth-child(3) {
      grid-row: auto;
      grid-column: 1;
    }
    
    .product-visual,
    .product-visual-compact {
      height: 180px;
    }
    
    .product-footer {
      flex-direction: column;
      align-items: stretch;
      text-align: center;
    }
    
    .product-actions {
      justify-content: center;
    }
    
    .section-cta {
      padding: var(--spacing-md);
    }
  }
</style>

