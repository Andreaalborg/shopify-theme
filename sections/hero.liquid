<section class="hero-essentia section">
  <div class="container">
    <div class="hero-grid">
      
      <!-- Left Column - Content -->
      <div class="hero-content fade-in">
        <div class="hero-badge">
          <span class="badge-text">Premium Air Care</span>
        </div>
        
        <h1 class="hero-title fade-in-up">
          {{ section.settings.title | default: "Frisk luft, overalt" }}
        </h1>
        
        <p class="hero-description fade-in">
          {{ section.settings.subtitle | default: "Premium luftfriskere designet for moderne hjem og biler. Nordisk kvalitet møter innovativ teknologi." }}
        </p>
        
        <div class="hero-stats">
          <div class="stat-item">
            <div class="stat-number">{{ section.settings.stat1_value | default: "Nylig" }}</div>
            <div class="stat-label">{{ section.settings.stat1_label | default: "Lansert" }}</div>
          </div>
          <div class="stat-item">
            <div class="stat-number">{{ section.settings.stat2_value | default: "2" }}</div>
            <div class="stat-label">{{ section.settings.stat2_label | default: "Bilprodukter" }}</div>
          </div>
          <div class="stat-item">
            <div class="stat-number">{{ section.settings.stat3_value | default: "7" }}</div>
            <div class="stat-label">{{ section.settings.stat3_label | default: "Dufter & refills" }}</div>
          </div>
        </div>
        
        <div class="hero-actions fade-in-up">
          <a href="{{ section.settings.button_link | default: '/collections/all' }}" class="btn btn-primary">
            {{ section.settings.button_text | default: "Se produkter" }}
          </a>
          <a href="/pages/om-oss" class="btn btn-ghost">
            Lær mer
          </a>
        </div>
      </div>
      
      <!-- Right Column - Video Visual -->
      {% if section.settings.show_video %}
      <div class="hero-video fade-in-right">
        <div class="video-frame">
          <video autoplay muted loop playsinline preload="metadata">
            <source src="{{ '4154241-uhd_4096_2160_25fps.mp4' | asset_url }}" type="video/mp4">
          </video>
        </div>
      </div>
      {% endif %}
      
      
    </div>
  </div>
</section>

<style>
  .hero-essentia {
    padding: 96px 0 120px 0;
    background: var(--white);
    overflow: hidden;
  }
  
  .hero-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 48px;
    align-items: center;
    min-height: 70vh;
    text-align: left;
  }
  
  /* Content Column */
  .hero-content {
    max-width: 720px;
    margin: 0 auto 0 0;
  }
  
  .hero-badge {
    display: inline-flex;
    align-items: center;
    padding: 6px 16px;
    background: var(--secondary);
    border: 1px solid var(--border);
    border-radius: 100px;
    margin-bottom: 32px;
  }
  
  .badge-text {
    font-size: 0.85rem;
    font-weight: 500;
    color: var(--primary);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .hero-title {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 700;
    line-height: 1.1;
    color: var(--primary);
    margin-bottom: 24px;
    letter-spacing: -0.02em;
  }
  
  .hero-description {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--text-muted);
    margin-bottom: 40px;
  }
  
  .hero-stats {
    display: flex;
    gap: 48px;
    margin-bottom: 48px;
    padding: 24px 0;
    border-top: 1px solid var(--border-light);
    border-bottom: 1px solid var(--border-light);
    justify-content: center;
  }
  
  .stat-item {
    text-align: center;
  }
  
  .stat-number {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--primary);
    line-height: 1;
    margin-bottom: 4px;
  }
  
  .stat-label {
    font-size: 0.9rem;
    color: var(--text-muted);
    font-weight: 500;
  }
  
  .hero-actions {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
    justify-content: flex-start;
  }
  
  .hero-video .video-frame {
    border-radius: 20px;
    overflow: hidden;
    border: 1px solid var(--border);
    box-shadow: 0 10px 30px rgba(0,0,0,0.08);
    background: var(--secondary);
  }
  .hero-video video { display: block; width: 100%; height: auto; }
  
  /* Responsive */
  @media (max-width: 1024px) {
    .hero-grid {
      gap: 60px;
    }
    
    .hero-stats {
      gap: 32px;
    }
    
    .stat-number {
      font-size: 1.5rem;
    }
  }
  
  @media (max-width: 768px) {
    .hero-essentia {
      padding: 80px 0;
    }
    
    .hero-grid { grid-template-columns: 1fr; gap: 60px; text-align: center; }
    
    .hero-content { max-width: 100%; order: 2; margin: 0 auto; }
    .hero-video { order: 1; }
    
    .hero-stats {
      gap: 24px;
      justify-content: center;
    }
    
    .hero-actions {
      justify-content: center;
    }
    
    .product-preview-grid {
      grid-template-columns: 1fr;
      grid-template-rows: repeat(3, auto);
      gap: 16px;
    }
    
    .card-1,
    .card-2,
    .card-3 {
      grid-column: 1;
      animation: fadeInUp 0.8s ease both;
    }
    
    .card-1 { animation-delay: 0.2s; }
    .card-2 { animation-delay: 0.4s; }
    .card-3 { animation-delay: 0.6s; }
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

