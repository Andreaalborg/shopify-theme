<section class="hero-essentia section">
  {% if section.settings.show_video %}
  <div class="hero-bg-video" style="display:none;"></div>
  {% endif %}
  <div class="container">
    <div class="hero-grid">
      <div class="hero-card fade-in-scale">
        {% if section.settings.show_video %}
        <div class="hero-card-media">
          <video autoplay muted loop playsinline preload="metadata">
            <source src="{{ '4154241-uhd_4096_2160_25fps.mp4' | asset_url }}" type="video/mp4">
          </video>
        </div>
        {% endif %}
        <div class="hero-card-overlay"></div>
        <div class="hero-card-body">
          <div class="hero-content fade-in">
            <div class="hero-badge">
              <span class="badge-text">Premium Air Care</span>
            </div>
            
            <h1 class="hero-title fade-in-up">
              {{ section.settings.title | default: "Frisk luft, overalt" }}
            </h1>
            
            <p class="hero-description fade-in">
              {{ section.settings.subtitle | default: "Premium luftfriskere designet for moderne hjem og biler. Nordisk kvalitet møter innovativ teknologi." }}
            </p>
            
            <div class="hero-stats">
              <div class="stat-item">
                <div class="stat-number">{{ section.settings.stat1_value | default: "Nylig" }}</div>
                <div class="stat-label">{{ section.settings.stat1_label | default: "Lansert" }}</div>
              </div>
              <div class="stat-item">
                <div class="stat-number">{{ section.settings.stat2_value | default: "2" }}</div>
                <div class="stat-label">{{ section.settings.stat2_label | default: "Bilprodukter" }}</div>
              </div>
              <div class="stat-item">
                <div class="stat-number">{{ section.settings.stat3_value | default: "7" }}</div>
                <div class="stat-label">{{ section.settings.stat3_label | default: "Dufter & refills" }}</div>
              </div>
            </div>
            
            <div class="hero-actions fade-in-up">
              <a href="{{ section.settings.button_link | default: '/collections/all' }}" class="btn btn-primary">
                {{ section.settings.button_text | default: "Se produkter" }}
              </a>
              <a href="/pages/om-oss" class="btn btn-ghost">
                Lær mer
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-essentia {
    padding: 96px 0 120px 0;
    background: var(--white);
    overflow: hidden;
    position: relative;
  }
  
  .hero-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 24px;
    align-items: center;
    min-height: 80vh;
    text-align: center;
    position: relative;
    z-index: 2;
  }
  
  /* Card with rounded video background */
  .hero-card {
    position: relative;
    border-radius: 24px;
    overflow: hidden;
    border: 1px solid var(--border);
    box-shadow: 0 16px 48px rgba(0,0,0,0.08);
    background: var(--secondary);
  }
  .hero-card-media video {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
    aspect-ratio: 16/9;
  }
  .hero-card-overlay {
    position: absolute; inset: 0; pointer-events: none;
    background: linear-gradient(180deg, rgba(255,255,255,0.92) 0%, rgba(255,255,255,0.84) 40%, rgba(255,255,255,0.78) 100%);
  }
  .hero-card-body {
    position: absolute; inset: 0; display: grid; place-items: center; padding: 32px;
  }
  
  /* Content Column */
  .hero-content {
    max-width: 720px;
    margin: 0 auto;
  }
  
  .hero-badge {
    display: inline-flex;
    align-items: center;
    padding: 6px 16px;
    background: var(--secondary);
    border: 1px solid var(--border);
    border-radius: 100px;
    margin-bottom: 32px;
  }
  
  .badge-text {
    font-size: 0.85rem;
    font-weight: 500;
    color: var(--primary);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .hero-title {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 700;
    line-height: 1.1;
    color: var(--primary);
    margin-bottom: 24px;
    letter-spacing: -0.02em;
  }
  
  .hero-description {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--text-muted);
    margin-bottom: 40px;
  }
  
  .hero-stats {
    display: flex;
    gap: 48px;
    margin-bottom: 48px;
    padding: 24px 0;
    border-top: 1px solid var(--border-light);
    border-bottom: 1px solid var(--border-light);
    justify-content: center;
  }
  
  .stat-item { text-align: center; }
  .stat-number { font-size: 1.75rem; font-weight: 700; color: var(--primary); line-height: 1; margin-bottom: 4px; }
  .stat-label { font-size: 0.9rem; color: var(--text-muted); font-weight: 500; }
  
  .hero-actions { display: flex; gap: 16px; flex-wrap: wrap; justify-content: center; }
  
  /* Responsive */
  @media (max-width: 1024px) {
    .hero-grid { gap: 40px; }
    .hero-stats { gap: 32px; }
    .stat-number { font-size: 1.5rem; }
  }
  
  @media (max-width: 768px) {
    .hero-essentia { padding: 80px 0; }
    .hero-grid { grid-template-columns: 1fr; gap: 32px; text-align: center; }
    .hero-content { max-width: 100%; margin: 0 auto; }
    .hero-actions { justify-content: center; }
  }
  
  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>

{% schema %}
{
  "name": "Hero",
  "settings": [
    { "type": "text", "id": "title", "label": "Title", "default": "Velkommen" },
    { "type": "text", "id": "subtitle", "label": "Subtitle", "default": "Oppdag våre produkter" },
    { "type": "text", "id": "button_text", "label": "Button text", "default": "Shop nå" },
    { "type": "url", "id": "button_link", "label": "Button link" },
    { "type": "image_picker", "id": "hero_image", "label": "Background image" },
    { "type": "text", "id": "stat1_value", "label": "Stat 1 verdi", "default": "Nylig" },
    { "type": "text", "id": "stat1_label", "label": "Stat 1 label", "default": "Lansert" },
    { "type": "text", "id": "stat2_value", "label": "Stat 2 verdi", "default": "2" },
    { "type": "text", "id": "stat2_label", "label": "Stat 2 label", "default": "Bilprodukter" },
    { "type": "text", "id": "stat3_value", "label": "Stat 3 verdi", "default": "7" },
    { "type": "text", "id": "stat3_label", "label": "Stat 3 label", "default": "Dufter & refills" },
    { "type": "checkbox", "id": "show_video", "label": "Vis hero-video", "default": true }
  ],
  "presets": [ { "name": "Hero" } ]
}
{% endschema %}