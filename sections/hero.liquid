<section class="hero-essentia section">
  <div class="container">
    <div class="hero-grid">
      
      <!-- Left Column - Content -->
      <div class="hero-content fade-in">
        <div class="hero-badge">
          <span class="badge-text">Premium Air Care</span>
        </div>
        
        <h1 class="hero-title">
          {{ section.settings.title | default: "Frisk luft, overalt" }}
        </h1>
        
        <p class="hero-description">
          {{ section.settings.subtitle | default: "Premium luftfriskere designet for moderne hjem og biler. Nordisk kvalitet møter innovativ teknologi." }}
        </p>
        
        <div class="hero-stats">
          <div class="stat-item">
            <div class="stat-number">500+</div>
            <div class="stat-label">Fornøyde kunder</div>
          </div>
          <div class="stat-item">
            <div class="stat-number">4.9</div>
            <div class="stat-label">⭐ Rating</div>
          </div>
          <div class="stat-item">
            <div class="stat-number">3</div>
            <div class="stat-label">Unike produkter</div>
          </div>
        </div>
        
        <div class="hero-actions">
          <a href="{{ section.settings.button_link | default: '/collections/all' }}" class="btn btn-primary">
            {{ section.settings.button_text | default: "Se produkter" }}
          </a>
          <a href="/pages/om-oss" class="btn btn-ghost">
            Lær mer
          </a>
        </div>
      </div>
      
      <!-- Right Column - Visual -->
      <div class="hero-visual fade-in">
        <div class="visual-container">
          
          <!-- Background Elements -->
          <div class="bg-element bg-circle"></div>
          <div class="bg-element bg-dots"></div>
          
          <!-- Product Preview Cards -->
          <div class="product-preview-grid">
            
            <div class="product-preview-card card-1">
              <div class="preview-image">
                <div class="product-icon icon-vent">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2z"/>
                    <path d="M8 9l8 0"/>
                    <path d="M8 12l8 0"/>
                    <path d="M8 15l8 0"/>
                  </svg>
                </div>
              </div>
              <div class="preview-content">
                <h4>Car Vent</h4>
                <p class="text-muted">Fra 149 kr</p>
              </div>
            </div>
            
            <div class="product-preview-card card-2">
              <div class="preview-image">
                <div class="product-icon icon-mirror">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <circle cx="12" cy="12" r="7"/>
                    <path d="M12 5v14"/>
                    <path d="M5 12h14"/>
                  </svg>
                </div>
              </div>
              <div class="preview-content">
                <h4>Mirror Hanger</h4>
                <p class="text-muted">Fra 99 kr</p>
              </div>
            </div>
            
            <div class="product-preview-card card-3">
              <div class="preview-image">
                <div class="product-icon icon-diffuser">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M12 2v20"/>
                    <path d="M17 5H9.5a3.5 3.5 0 000 7h5a3.5 3.5 0 010 7H6"/>
                  </svg>
                </div>
              </div>
              <div class="preview-content">
                <h4>Home Diffuser</h4>
                <p class="text-muted">Fra 399 kr</p>
              </div>
            </div>
            
          </div>
          
        </div>
      </div>
      
    </div>
  </div>
</section>

<style>
  .hero-essentia {
    padding: 96px 0 120px 0;
    background: var(--white);
    overflow: hidden;
  }
  
  .hero-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
    min-height: 80vh;
  }
  
  /* Content Column */
  .hero-content {
    max-width: 520px;
  }
  
  .hero-badge {
    display: inline-flex;
    align-items: center;
    padding: 6px 16px;
    background: var(--secondary);
    border: 1px solid var(--border);
    border-radius: 100px;
    margin-bottom: 32px;
  }
  
  .badge-text {
    font-size: 0.85rem;
    font-weight: 500;
    color: var(--primary);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .hero-title {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 700;
    line-height: 1.1;
    color: var(--primary);
    margin-bottom: 24px;
    letter-spacing: -0.02em;
  }
  
  .hero-description {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--text-muted);
    margin-bottom: 40px;
  }
  
  .hero-stats {
    display: flex;
    gap: 48px;
    margin-bottom: 48px;
    padding: 24px 0;
    border-top: 1px solid var(--border-light);
    border-bottom: 1px solid var(--border-light);
  }
  
  .stat-item {
    text-align: center;
  }
  
  .stat-number {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--primary);
    line-height: 1;
    margin-bottom: 4px;
  }
  
  .stat-label {
    font-size: 0.9rem;
    color: var(--text-muted);
    font-weight: 500;
  }
  
  .hero-actions {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
  }
  
  /* Visual Column */
  .hero-visual {
    position: relative;
    height: 600px;
  }
  
  .visual-container {
    position: relative;
    width: 100%;
    height: 100%;
  }
  
  /* Background Elements */
  .bg-element {
    position: absolute;
    z-index: 1;
  }
  
  .bg-circle {
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, var(--accent) 0%, transparent 70%);
    border-radius: 50%;
    top: 50px;
    right: 50px;
    opacity: 0.3;
    animation: floatSlow 20s ease-in-out infinite;
  }
  
  .bg-dots {
    width: 120px;
    height: 120px;
    background-image: radial-gradient(circle, var(--border) 2px, transparent 2px);
    background-size: 20px 20px;
    bottom: 100px;
    left: 20px;
    opacity: 0.4;
  }
  
  @keyframes floatSlow {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-30px) rotate(180deg); }
  }
  
  /* Product Preview Grid */
  .product-preview-grid {
    position: relative;
    z-index: 2;
    height: 100%;
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr 1fr 1fr;
    gap: 20px;
    padding: 20px;
  }
  
  .product-preview-card {
    background: var(--white);
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
    padding: 24px;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(0,0,0,0.04);
  }
  
  .product-preview-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 32px rgba(0,0,0,0.12);
    border-color: var(--accent);
  }
  
  .card-1 {
    grid-row: 1 / 2;
    grid-column: 1 / 2;
    animation: slideInLeft 0.8s ease 0.2s both;
  }
  
  .card-2 {
    grid-row: 2 / 3;
    grid-column: 2 / 3;
    animation: slideInRight 0.8s ease 0.4s both;
  }
  
  .card-3 {
    grid-row: 3 / 4;
    grid-column: 1 / 2;
    animation: slideInLeft 0.8s ease 0.6s both;
  }
  
  @keyframes slideInLeft {
    from {
      opacity: 0;
      transform: translateX(-40px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  
  @keyframes slideInRight {
    from {
      opacity: 0;
      transform: translateX(40px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  
  .preview-image {
    width: 60px;
    height: 60px;
    background: var(--secondary);
    border-radius: var(--radius-sm);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 16px;
    transition: all 0.3s ease;
  }
  
  .product-preview-card:hover .preview-image {
    background: var(--accent);
    transform: scale(1.1);
  }
  
  .product-icon {
    width: 24px;
    height: 24px;
    color: var(--primary);
    transition: all 0.3s ease;
  }
  
  .product-preview-card:hover .product-icon {
    color: var(--white);
  }
  
  .preview-content h4 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--primary);
    margin-bottom: 4px;
  }
  
  .preview-content p {
    font-size: 0.875rem;
    margin: 0;
  }
  
  /* Responsive */
  @media (max-width: 1024px) {
    .hero-grid {
      gap: 60px;
    }
    
    .hero-stats {
      gap: 32px;
    }
    
    .stat-number {
      font-size: 1.5rem;
    }
  }
  
  @media (max-width: 768px) {
    .hero-essentia {
      padding: 80px 0;
    }
    
    .hero-grid {
      grid-template-columns: 1fr;
      gap: 60px;
      text-align: center;
    }
    
    .hero-content {
      max-width: 100%;
      order: 2;
    }
    
    .hero-visual {
      order: 1;
      height: 400px;
    }
    
    .hero-stats {
      gap: 24px;
      justify-content: center;
    }
    
    .hero-actions {
      justify-content: center;
    }
    
    .product-preview-grid {
      grid-template-columns: 1fr;
      grid-template-rows: repeat(3, auto);
      gap: 16px;
    }
    
    .card-1,
    .card-2,
    .card-3 {
      grid-column: 1;
      animation: fadeInUp 0.8s ease both;
    }
    
    .card-1 { animation-delay: 0.2s; }
    .card-2 { animation-delay: 0.4s; }
    .card-3 { animation-delay: 0.6s; }
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

