    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Background image"
    },
    { "type": "text", "id": "stat1_value", "label": "Stat 1 verdi", "default": "Nylig" },
    { "type": "text", "id": "stat1_label", "label": "Stat 1 label", "default": "Lansert" },
    { "type": "text", "id": "stat2_value", "label": "Stat 2 verdi", "default": "2" },
    { "type": "text", "id": "stat2_label", "label": "Stat 2 label", "default": "Bilprodukter" },
    { "type": "text", "id": "stat3_value", "label": "Stat 3 verdi", "default": "7" },
    { "type": "text", "id": "stat3_label", "label": "Stat 3 label", "default": "Dufter & refills" },
    { "type": "checkbox", "id": "show_video", "label": "Vis hero-video", "default": true }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
