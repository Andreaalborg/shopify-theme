<script>
class FullscreenProductSlider {
  constructor() {
    this.currentSlide = 0;
    this.slides = document.querySelectorAll('.product-slide');
    this.dots = document.querySelectorAll('.progress-dots .dot');
    this.progressFill = document.querySelector('.progress-fill');
    this.scrollHint = document.querySelector('.scroll-hint');
    this.isScrolling = false;
    this.scrollTimeout = null;
    this.totalSlides = this.slides.length;
    
    this.init();
  }
  
  init() {
    this.bindEvents();
    this.updateProgress();
  }
  
  bindEvents() {
    // Scroll hijacking
    window.addEventListener('wheel', (e) => this.handleWheel(e), { passive: false });
    
    // Dot navigation
    this.dots.forEach((dot, index) => {
      dot.addEventListener('click', () => this.goToSlide(index));
    });
    
    // Touch events for mobile
    let startY = 0;
    let startX = 0;
    
    document.addEventListener('touchstart', (e) => {
      startY = e.touches[0].clientY;
      startX = e.touches[0].clientX;
    });
    
    document.addEventListener('touchmove', (e) => {
      if (!this.isInProductSection()) return;
      e.preventDefault();
    }, { passive: false });
    
    document.addEventListener('touchend', (e) => {
      if (!this.isInProductSection()) return;
      
      const endY = e.changedTouches[0].clientY;
      const endX = e.changedTouches[0].clientX;
      const diffY = startY - endY;
      const diffX = Math.abs(startX - endX);
      
      // Only handle vertical swipes
      if (Math.abs(diffY) > 50 && diffX < 100) {
        if (diffY > 0) {
          this.nextSlide();
        } else {
          this.prevSlide();
        }
      }
    });
    
    // Keyboard navigation
    document.addEventListener('keydown', (e) => {
      if (!this.isInProductSection()) return;
      
      if (e.key === 'ArrowDown' || e.key === 'ArrowRight') {
        e.preventDefault();
        this.nextSlide();
      } else if (e.key === 'ArrowUp' || e.key === 'ArrowLeft') {
        e.preventDefault();
        this.prevSlide();
      }
    });
    
    // Update scroll hint when entering/leaving section
    window.addEventListener('scroll', () => {
      this.updateScrollHint();
    });
  }
  
  handleWheel(e) {
    if (!this.isInProductSection()) return;
    
    e.preventDefault();
    
    if (this.isScrolling) return;
    
    // Clear any existing timeout
    clearTimeout(this.scrollTimeout);
    
    // Set scrolling flag
    this.isScrolling = true;
    
    if (e.deltaY > 0) {
      // Scrolling down
      if (this.currentSlide < this.totalSlides - 1) {
        this.nextSlide();
      } else {
        // Allow normal scrolling to continue to next section
        this.allowNormalScroll();
      }
    } else {
      // Scrolling up
      if (this.currentSlide > 0) {
        this.prevSlide();
      } else {
        // Allow normal scrolling to previous section
        this.allowNormalScroll();
      }
    }
    
    // Reset scrolling flag after animation
    this.scrollTimeout = setTimeout(() => {
      this.isScrolling = false;
    }, 1200);
  }
  
  isInProductSection() {
    const section = document.getElementById('fullscreen-products');
    const rect = section.getBoundingClientRect();
    return rect.top <= 0 && rect.bottom >= window.innerHeight;
  }
  
  allowNormalScroll() {
    // Temporarily allow normal scrolling
    this.isScrolling = false;
    setTimeout(() => {
      // Re-enable scroll hijacking after a brief moment
      this.isScrolling = false;
    }, 100);
  }
  
  updateScrollHint() {
    if (this.isInProductSection()) {
      this.scrollHint.style.opacity = '1';
      this.scrollHint.style.visibility = 'visible';
    } else {
      this.scrollHint.style.opacity = '0';
      this.scrollHint.style.visibility = 'hidden';
    }
  }
  
  nextSlide() {
    if (this.currentSlide >= this.totalSlides - 1) return;
    this.goToSlide(this.currentSlide + 1);
  }
  
  prevSlide() {
    if (this.currentSlide <= 0) return;
    this.goToSlide(this.currentSlide - 1);
  }
  
  goToSlide(index) {
    if (index === this.currentSlide || index < 0 || index >= this.totalSlides) return;
    
    // Remove active class from current slide
    this.slides[this.currentSlide].classList.remove('active');
    this.dots[this.currentSlide].classList.remove('active');
    
    // Add next/prev classes for animation direction
    if (index > this.currentSlide) {
      this.slides[this.currentSlide].classList.add('prev');
      this.slides[index].classList.add('next');
    } else {
      this.slides[this.currentSlide].classList.add('next');
      this.slides[index].classList.add('prev');
    }
    
    // Update current slide
    this.currentSlide = index;
    
    // Add active class to new slide
    setTimeout(() => {
      this.slides[this.currentSlide].classList.add('active');
      this.dots[this.currentSlide].classList.add('active');
      
      // Clean up transition classes
      this.slides.forEach(slide => {
        slide.classList.remove('next', 'prev');
      });
    }, 50);
    
    this.updateProgress();
    this.updateBackgroundColor();
  }
  
  updateProgress() {
    const progress = ((this.currentSlide + 1) / this.totalSlides) * 100;
    this.progressFill.style.transform = `scaleY(${progress / 100})`;
  }
  
  updateBackgroundColor() {
    const currentSlideElement = this.slides[this.currentSlide];
    const bgColor = currentSlideElement.dataset.bg;
    const accentColor = currentSlideElement.dataset.accent;
    
    // Update CSS custom properties for smooth color transitions
    document.documentElement.style.setProperty('--current-bg', bgColor);
    document.documentElement.style.setProperty('--current-accent', accentColor);
  }
}

// Initialize when DOM is loaded
document.addEventListener('DOMContentLoaded', function() {
  new FullscreenProductSlider();
  
  // Add interactive hover effects to 3D products
  const productContainers = document.querySelectorAll('.product-image-container');
  
  productContainers.forEach(container => {
    const product3d = container.querySelector('.product-3d-modern');
    
    container.addEventListener('mouseenter', () => {
      product3d.style.animationPlayState = 'paused';
    });
    
    container.addEventListener('mouseleave', () => {
      product3d.style.animationPlayState = 'running';
      product3d.style.transform = '';
    });
    
    container.addEventListener('mousemove', (e) => {
      const rect = container.getBoundingClientRect();
      const x = (e.clientX - rect.left) / rect.width - 0.5;
      const y = (e.clientY - rect.top) / rect.height - 0.5;
      
      const rotateY = x * 30;
      const rotateX = -y * 30;
      
      product3d.style.transform = `rotateY(${rotateY}deg) rotateX(${rotateX}deg)`;
    });
  });
  
  // Add magnetic effect to buttons
  const buttons = document.querySelectorAll('.btn-modern');
  
  buttons.forEach(button => {
    button.addEventListener('mousemove', (e) => {
      const rect = button.getBoundingClientRect();
      const x = e.clientX - rect.left - rect.width / 2;
      const y = e.clientY - rect.top - rect.height / 2;
      
      button.style.transform = `translate(${x * 0.1}px, ${y * 0.1}px) translateY(-3px)`;
    });
    
    button.addEventListener('mouseleave', () => {
      button.style.transform = '';
    });
  });
});
</script>

